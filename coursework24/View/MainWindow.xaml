<Window x:Class="coursework24.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:coursework24.View"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="View Departments" Command="{Binding ViewDepartmentsCommand}" Margin="10"/>
            <Button Content="View Rooms" Command="{Binding ViewRoomsCommand}" Margin="10"/>
            <Button Content="Add Room" Command="{Binding AddRoomCommand}" Margin="10"/>
            <Button Content="Calculate Room Area and Volume" Command="{Binding CalculateRoomAreaCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>